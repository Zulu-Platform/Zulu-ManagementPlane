<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- ~~~~~~~~~~~~~~~~~~~~ listener ~~~~~~~~~~~~~~~~~~~~ -->
    <listener>
        <listener-class>ru.zulu.server.HttpSessionCollector</listener-class>
    </listener>
    <!-- ~~~~~~~~~~~~~~~~~~~~ servlet ~~~~~~~~~~~~~~~~~~~~ -->
    <servlet>
        <servlet-name>MessageServiceImpl</servlet-name>
        <servlet-class>ru.zulu.server.services.MessageServiceImpl</servlet-class>
    </servlet>
    <!-- ~~~~~~~~~~~~~~~~~~~~ servlet-mapping ~~~~~~~~~~~~~~~~~~~~ -->
    <servlet-mapping>
        <servlet-name>MessageServiceImpl</servlet-name>
        <url-pattern>/ru_zulu_server_services/messageServiceImpl/*</url-pattern>
    </servlet-mapping>
    <!-- ~~~~~~~~~~~~~~~~~~~~ welcome-file-list ~~~~~~~~~~~~~~~~~~~~ -->
    <welcome-file-list>
        <welcome-file>welcome.html</welcome-file>
    </welcome-file-list>
</web-app>
